<p id="notice"><%= notice %></p>

<h1>Passenger Details</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Booking</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passenger_details.each do |passenger_detail| %>
      <tr>
        <td><%= passenger_detail.booking_id %></td>
        <td><%= passenger_detail.first_name %></td>
        <td><%= passenger_detail.last_name %></td>
        <td><%= passenger_detail.gender %></td>
        <td><%= passenger_detail.date_of_birth %></td>
        <td><%= link_to 'Show', passenger_detail %></td>
        <td><%= link_to 'Edit', edit_passenger_detail_path(passenger_detail) %></td>
        <td><%= link_to 'Destroy', passenger_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

