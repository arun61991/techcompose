<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>PNR</th>
      <th>Departure City</th>
      <th>Destination City</th>
      <th>Departure Date</th>
      <th>Price</th>
      <th>No.of Passenger</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.booking_pnr %></td>
        <td><%= booking.flight_schedule.departure_airport.city %></td>
        <td><%= booking.flight_schedule.destination_airport.city %></td>
        <td><%= booking.flight_schedule.date %></td>
        <td><%= booking.flight_schedule.price.to_f %></td>
        <td><%= booking.passenger_details.count %></td>
        <td><%= booking.flight_schedule.price.to_f * booking.passenger_details.count %></td>
        <td><%= booking.status %></td>
        <td><%= link_to 'Passenger Details', booking %></td>
        <td><%= link_to 'Cancle Booking', cancle_booking_path(booking), data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

